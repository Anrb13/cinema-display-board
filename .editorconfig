# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
quote_type = single

[*.{ts,js,cjs,mjs,vue,html,css,scss,md,json,snap}]
max_line_length = 80
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
